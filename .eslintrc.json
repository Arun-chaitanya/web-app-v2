{
  "extends": ["react-app", "react-app/jest", "prettier", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "overrides": [
    {
      "files": "**/*.test.*",
      "rules": {
        "@typescript-eslint/no-unsafe-call": "off"
      }
    }
  ],
  "rules": {
    "semi": "error"
  }
}
